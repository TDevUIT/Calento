# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=tempra_db

# JWT Configuration (IMPORTANT: Change these in production!)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-characters-long
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-at-least-32-characters-long

# Application Configuration
NODE_ENV=development
API_PORT=8000
API_HOST=localhost
API_PREFIX=api/v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug

# Google Calendar OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/google/auth/callback

# Frontend Configuration (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Batch Sync Optimization Configuration
# Số events mỗi batch (recommended: 30-100)
BATCH_SYNC_BATCH_SIZE=50

# Số operations đồng thời (recommended: 5-20, phải < DB max connections)
BATCH_SYNC_CONCURRENCY_LIMIT=10

# Delay giữa batches tính bằng ms (recommended: 50-200ms để tránh rate limit)
BATCH_SYNC_RATE_LIMIT_DELAY=100

# Số lần retry tối đa khi có lỗi (recommended: 2-5)
BATCH_SYNC_MAX_RETRIES=3

# Redis Configuration (Required for BullMQ Queue System)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Queue Configuration
# Số workers đồng thời cho toàn bộ queue system
QUEUE_CONCURRENCY=10

# Max số jobs có thể xử lý trong duration
QUEUE_RATE_LIMIT_MAX=100

# Duration cho rate limiting (ms)
QUEUE_RATE_LIMIT_DURATION=1000

# Worker Concurrency per Queue (Optional - override per queue)
EVENT_SYNC_WORKER_CONCURRENCY=5
EMAIL_WORKER_CONCURRENCY=5
WEBHOOK_WORKER_CONCURRENCY=10

# Email Configuration (SMTP with Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=Tempra <noreply@tempra.app>
