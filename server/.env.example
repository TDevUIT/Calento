===========================================
# TEMPRA API - Environment Configuration
#===========================================

# ===== Application =====
NODE_ENV=development
PORT=3000
API_PORT=8000
API_HOST=localhost
API_URL=http://localhost:8000
API_PREFIX=api/v1

# ===== Logging =====
# Options: debug, info, warn, error
# Production recommendation: warn or error
LOG_LEVEL=info

# ===== Database (PostgreSQL) =====
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_NAME=tempra

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000
DB_POOL_MAX_USES=7500

# ===== Redis (For Queues & Cache) =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== JWT & Authentication =====
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=1h

JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long
JWT_REFRESH_ALGORITHM=HS256
JWT_REFRESH_EXPIRES_IN=7d

SESSION_SECRET=your-session-secret-minimum-32-characters-long

# ===== CORS Configuration =====
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true
CORS_EXPOSED_HEADERS=Content-Length,Content-Type
CORS_MAX_AGE=86400

# ===== Frontend Configuration =====
FRONTEND_URL=http://localhost:3000
FRONTEND_DOMAIN=localhost

# ===== File Upload =====
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ===== Cloudinary Configuration =====
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# ===== Google OAuth & Calendar =====
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# ===== Gemini AI Configuration =====
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=models/gemini-2.5-flash

# ===== Email Configuration =====
# (Add your email service config here)

# ===== Webhook Configuration =====
WEBHOOK_URL=https://your-domain.com/api/v1/webhook/google

# ===== Swagger Documentation =====
ENABLE_SWAGGER=true
