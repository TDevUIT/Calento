# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=tempra
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_256_bits
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=production
PORT=8000
APP_URL=https://yourdomain.com
API_PREFIX=api
CORS_ORIGIN=https://yourdomain.com

# Email Configuration
EMAIL_PROVIDER=smtp
EMAIL_RATE_LIMIT=100
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Optional Email Providers
SENDGRID_API_KEY=
AWS_SES_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
RESEND_API_KEY=

# Google Calendar Integration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/google/callback

# Webhook Configuration
WEBHOOK_URL=https://yourdomain.com/api/webhook/google

# BullMQ Queue Configuration
QUEUE_CONCURRENCY=10
QUEUE_RATE_LIMIT_MAX=100
QUEUE_RATE_LIMIT_DURATION=1000
EVENT_SYNC_WORKER_CONCURRENCY=5
EMAIL_WORKER_CONCURRENCY=5
WEBHOOK_WORKER_CONCURRENCY=10

# Security & Performance
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/usr/src/app/logs/app.log

# Health Check
HEALTH_CHECK_ENABLED=true
