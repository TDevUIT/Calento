# ===========================================
# CALENTO SERVER ENVIRONMENT CONFIGURATION
# ===========================================

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=calento
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000
DB_POOL_MAX_USES=7500

# Redis Configuration (Required for BullMQ Queue System)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application Configuration
NODE_ENV=development
PORT=3000
API_PORT=8000
API_HOST=localhost
API_URL=http://localhost:8000
API_PREFIX=v1/api

# JWT Configuration
JWT_SECRET=calento_jwt_secret_key_for_development_environment_2024_secure_32chars
JWT_ALGORITHM=RS256
JWT_EXPIRES_IN=10m

# JWT Refresh Token Configuration
JWT_REFRESH_SECRET=calento_refresh_token_secret_for_development_environment_2024_secure_32chars
JWT_REFRESH_ALGORITHM=RS256
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=calento_session_secret_for_development_environment_2024_secure_32chars

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true
CORS_EXPOSED_HEADERS=Content-Length,Content-Type
CORS_MAX_AGE=86400

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info

# Swagger Documentation
ENABLE_SWAGGER=true

# Webhook Configuration
WEBHOOK_URL=https://your-domain.com/api/webhook/google
WEBHOOK_TOKEN_SECRET=your-secure-random-token

# Google Calendar OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/google/auth/callback

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Batch Sync Optimization Configuration
BATCH_SYNC_BATCH_SIZE=50
BATCH_SYNC_CONCURRENCY_LIMIT=10
BATCH_SYNC_RATE_LIMIT_DELAY=100
BATCH_SYNC_MAX_RETRIES=3

# Queue Configuration
QUEUE_CONCURRENCY=10
QUEUE_RATE_LIMIT_MAX=100
QUEUE_RATE_LIMIT_DURATION=1000

# Worker Concurrency (Optional - per queue)
EVENT_SYNC_WORKER_CONCURRENCY=5
EMAIL_WORKER_CONCURRENCY=5
WEBHOOK_WORKER_CONCURRENCY=10
