# ===========================================
# TEMPRA SERVER ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update the values

# Database Configuration
# PostgreSQL database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_postgres_password_here
DB_NAME=tempra_db

# Redis Configuration  
# Redis cache and session store settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Application Configuration
# Server and API settings
NODE_ENV=development
PORT=3000
API_PORT=8000
API_HOST=localhost
API_URL=http://localhost:8000
API_PREFIX=v1/api

# JWT Configuration
# JSON Web Token settings for authentication
# IMPORTANT: Use strong, random secrets (minimum 32 characters)
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=10m

# JWT Refresh Token Configuration
JWT_REFRESH_SECRET=your_super_secure_refresh_token_secret_minimum_32_characters
JWT_REFRESH_ALGORITHM=HS256
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
# Session secret for cookie signing
SESSION_SECRET=your_super_secure_session_secret_minimum_32_characters_long

# CORS Configuration
# Cross-Origin Resource Sharing settings
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true
CORS_EXPOSED_HEADERS=Content-Length,Content-Type
CORS_MAX_AGE=86400

# File Upload Configuration
# File upload limits and storage settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
# Application logging settings
LOG_LEVEL=info

# ===========================================
# SECURITY NOTES:
# ===========================================
# 1. Never commit .env files to version control
# 2. Use strong, unique secrets for production
# 3. Rotate secrets regularly
# 4. Use environment-specific values for each deployment
# ===========================================
